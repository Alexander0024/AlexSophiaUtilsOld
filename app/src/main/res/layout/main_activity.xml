<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:fitsSystemWindows="true"
                                       android:background="@color/bg_color">

    <com.lirenkj.educationforparent.share.views.slidingmenu.SlidingMenu
        android:id="@+id/sliding_menu"
        xmlns:sliding="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/menu_bg_color"
        sliding:behindOffset="200px"
        sliding:behindScrollScale="1"
        sliding:fadeDegree="0.3"
        sliding:fadeEnabled="true"
        sliding:touchModeAbove="fullscreen"
        sliding:viewAbove="@layout/main_layout"/>
</com.zhy.autolayout.AutoRelativeLayout>
