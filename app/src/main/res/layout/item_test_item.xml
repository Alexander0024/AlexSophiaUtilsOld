<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:id="@+id/item_test_item"
                                     android:layout_width="match_parent"
                                     android:layout_height="@dimen/h_128"
                                     android:gravity="center_vertical"
                                     android:orientation="horizontal"
                                     android:paddingLeft="@dimen/h_30"
                                     android:background="@drawable/selector_common_bg"
    >

    <ImageView
        android:id="@+id/iv_learn_list_icon"
        android:layout_width="@dimen/h_58"
        android:layout_height="@dimen/h_58"
        android:src="@mipmap/course01"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/h_30"
        android:paddingTop="@dimen/h_10"
        android:paddingBottom="@dimen/h_10"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/tv_item_test_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/h_30"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="五年级三班-第五单元测试"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/size_28"/>


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h_10">

            <TextView
                android:id="@+id/tv_item_test_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_answer"
                android:textColor="@color/home_work_red"
                android:textSize="@dimen/size_24"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_item_test_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hint_text_lighter"
                android:textSize="@dimen/size_24"
                android:visibility="gone"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginRight="150px"
                />

            <TextView
                android:id="@+id/tv_item_test_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/h_30"
                android:text="16:30"
                android:textColor="@color/hint_text_lighter"
                android:textSize="@dimen/size_24"/>

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
