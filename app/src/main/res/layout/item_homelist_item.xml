<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:orientation="vertical"
                                     android:background="@drawable/selector_common_bg"
    >

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/item_homelist_item"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/h_30"
        android:layout_height="@dimen/h_128">

        <ImageView
            android:id="@+id/iv_learn_list_icon"
            android:layout_width="@dimen/h_58"
            android:layout_height="@dimen/h_58"
            android:layout_centerVertical="true"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_homelist_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/h_30"
            android:layout_toRightOf="@id/iv_learn_list_icon"
            android:orientation="vertical"
            android:paddingTop="@dimen/h_10">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_item_home_list_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hint_text"
                    android:textSize="@dimen/size_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@id/tv_item_home_list_name"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/size_24"/>

                <TextView
                    android:id="@+id/tv_item_home_list_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/h_30"
                    android:textColor="@color/hint_text"
                    android:textSize="@dimen/size_24"
                    android:visibility="invisible"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:id="@+id/tv_item_home_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h_2"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/size_28"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h_2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_home_list_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/size_24"/>

                <TextView
                    android:id="@+id/tv_item_home_list_lasttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:textColor="@color/tv_green"
                    android:textSize="@dimen/size_24"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
