<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:gravity="center_horizontal"
                                     android:orientation="vertical"
    >

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="@dimen/h_120"
        android:layout_height="@dimen/h_120">

        <ImageView
            android:id="@+id/iv_item_learn_gv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/tv_item_learn_gv_typeNum"
            android:layout_width="@dimen/h_36"
            android:layout_height="@dimen/h_36"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_oval"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/size_24"
            />
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:id="@+id/tv_item_learn_gv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h_18"
        android:textColor="@color/title_unread"
        android:textSize="@dimen/size_28"
        />
</com.zhy.autolayout.AutoLinearLayout>