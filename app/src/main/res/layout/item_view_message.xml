<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout android:id="@+id/ll_news_details_item"
                                     xmlns:android="http://schemas.android.com/apk/res/android"
                                     xmlns:round="http://schemas.android.com/apk/res-auto"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h_20"
        android:gravity="center_horizontal"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/lv_sender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/h_10"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginRight="@dimen/notice_margin_message"
        android:layout_marginTop="@dimen/common_margin_normal"
        android:orientation="horizontal">

        <com.lirenkj.educationforparent.share.views.RoundedImageView
            android:id="@+id/iv_avatar_sender"
            android:layout_width="@dimen/info_stu_avatar_size"
            android:layout_height="@dimen/info_stu_avatar_size"
            android:src="@mipmap/public_imges_128px"
            round:riv_oval="true"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_margin_left">

                <TextView
                    android:id="@+id/tv_name_sender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tv_black"
                    android:textSize="@dimen/text_size_small"/>

                <TextView
                    android:id="@+id/tv_type_sender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/notice_margin_small"
                    android:textColor="@color/hint_text"
                    android:textSize="@dimen/text_size_small"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/tv_message_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/notice_margin_message"
                android:background="@drawable/gray"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/h_10"
                android:paddingLeft="@dimen/h_56"
                android:paddingRight="@dimen/h_20"
                android:paddingTop="@dimen/h_10"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_content"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/lv_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/h_10"
        android:layout_marginLeft="@dimen/notice_margin_message"
        android:layout_marginRight="@dimen/common_margin_right"
        android:layout_marginTop="@dimen/common_margin_normal"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_message_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/notice_margin_message"
            android:background="@drawable/green"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/h_10"
            android:paddingLeft="@dimen/h_20"
            android:paddingRight="@dimen/h_56"
            android:paddingTop="@dimen/h_10"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_content"/>

        <com.lirenkj.educationforparent.share.views.RoundedImageView
            android:id="@+id/iv_avatar_mine"
            android:layout_width="@dimen/h_58"
            android:layout_height="@dimen/h_58"
            android:src="@mipmap/public_imges_128px"
            round:riv_oval="true"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>